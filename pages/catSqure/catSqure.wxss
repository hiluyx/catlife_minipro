page{
  width: 100%;
  height: 100%;
}
.container{
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  top: 0px;
  padding: 0;
  font-family:"Microsoft YaHei";
}

.nav{
  width: 100%;
  height: 97rpx;
  background-color: rgb(245, 245, 245);
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 0px;
}

.item{
  font-size: 32rpx;
  font-family:"Microsoft YaHei";
  color: rgb(126, 125, 125);
  height: 50rpx;
  width: 100rpx;
  line-height: 50rpx;
  align-self: center;
  text-align: center;
}

.active{
  background-color: rgb(241, 222, 236);
  border-radius: 10rpx;
}

.list{
  width: 100%;
  height: 100%;
  display: flex;
  background-color: rgb(252, 252, 252);
}

.detail{
  margin: auto;
}
