/* pages/myPage/myPage.wxss */

Page{
  font-size:14px;
}

.top{
  width:100%;
  height:180px;
  background:#ddc7e9 ;
  padding-top:18px;
  position:relative;
}

.center{
  width:95%;
  height:150px;
  background: white;
  display: flex;
  flex-direction: column;
  margin:0 auto;
  border-radius: 5px;
}

.center_top{
  display: flex;
  flex-direction: row;
  width:80%;
  height:90px;
  margin:0 auto;
  margin-top:35rpx;
  border-bottom:1px solid #EEEEEE;
}

.center_img{
  width:66px;
  height:66px;
  border-radius: 50%;
  overflow: hidden;
}

.center_img image{
  width:100%;
  height:100%;
  border-radius:50%;
  margin-top: 50rpx;
}

.center_img .user_head{
  width: 100%;
  height: 100%;

}

.center_name{
  font-size: 14px;
  font-family:"Microsoft YaHei";
  align-items: center;
  color:#707070;
}

.center_phone{
  color: #BEBEBE;
}

.center_down{
  display: flex;
  flex-direction: row;
  width:80%;
  height:35px;
  margin:0 auto;
  margin-top:13rpx;
}

.center_follow{
  width:50%;
  height:35px;
  display: flex;
  flex-direction: row;
  margin-top:15rpx;
}

.rank_text{
  height:35px;
  line-height:35px;
  margin-left:10rpx;
  color:#AAAAAA;
}

.center_fan image{
  width:27px;
  height:27px;
}

.center_info{
  display: flex;
  flex-direction: column;
  margin-top: 25rpx;
  align-items: center;
}

.center_fan{
  width:50%;
  height:35px;
  display: flex;
  flex-direction: row;
  margin-top:15rpx;
}

.center_follow image{
  width:27px;
  height:27px;
}

.gif-wave{
  position: absolute;
  width: 100%;
  bottom:0;
  left:0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}




.page_list{
  display: flex; 
  flex-direction: column; 
  margin-top: 20px; 
  background-color:#dad7d7 ;
  background-position: 100%;
}

.list_1{
  display:flex;
  flex-direction:row ;
  background: #ffffff;
  width:100%;
  height:38px;
  font-size:30px;
  margin-left: 0rpx;
  border-radius: 20rpx;
  margin-top:7rpx;
}

.list_pic{
  width:25px; 
  height:25px; 
  margin-top: 14rpx;
  margin-left: 17rpx;
}

.list_text{
  font-size:38rpx;
  color: #7c7a7c;
  margin-left:30rpx;
  margin-top: 18rpx;
}


/*画箭头*/
.arrow{
  width:8px;
  height:8px;
  border-top:1px solid #999;
  border-right:1px solid #999;
  transform: rotate(45deg);
  margin-right: 10px;
  margin-top:10px;
}



/*功能列表部分*/
.myfunction{
  margin-top:17px;
}


/**/
.myinjust{
  color:rgb(255, 255, 255);
  transform: rotate(135deg);
}

/*头像和id部分*/
.myinfo{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50rpx;
}